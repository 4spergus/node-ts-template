{
  "name": "node-ts-template",
  "version": "1.0.0",
  "description": "Template package to use to start with a new microservice.",
  "main": "index.ts",
  "type": "commonjs",
  "keywords": [],
  "scripts": {
    "dev": "tsx watch src",
    "build": "swc ./src -d ./build",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\" --words-only",
    "test:unit": "jest --no-cache",
    "coverage": "run-s build coverage:test:*",
    "coverage:test:unit": "jest --no-cache --coverage",
    "watch:test": "jest --watch",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "npm run doc:html && echo 'Define doc:publish command'",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "4.19.2",
    "yup": "1.4.0"
  },
  "devDependencies": {
    "@swc/cli": "0.4.0",
    "@swc/core": "1.7.14",
    "@swc/helpers": "0.5.13",
    "@swc/jest": "0.2.36",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "cspell": "8.14.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-functional": "6.6.3",
    "eslint-plugin-import": "2.29.1",
    "husky": "9.1.5",
    "jest": "29.7.0",
    "npm-run-all": "4.1.5",
    "open-cli": "8.0.0",
    "prettier": "3.3.3",
    "regenerator-runtime": "0.14.1",
    "supertest": "7.0.0",
    "tsx": "4.19.0",
    "typedoc": "0.26.6",
    "typescript": "5.5.4"
  },
  "files": [
    "build/main",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ]
}
